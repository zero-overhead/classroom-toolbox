#!/usr/bin/env raku
use v6.d;
use App::Classroom::Toolbox;
use JSON::Fast;
          
sub MAIN(IO::Path(Str) :gf(:$grouping-file) where *.extension('json').f = %*ENV<CRTB_GROUP_FILE>, #= file containing grouping; --grouping-file=groups/demo-grouping or 'export CRTB_GROUP_FILE=groups/demo-grouping'
         ) {
    from-json $grouping-file.slurp ==> display-grouping;
    print("\n")
}
