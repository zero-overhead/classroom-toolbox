#!/usr/bin/env raku
use App::Classroom::Toolbox;

sub MAIN (Str :cf(:$class-file)      where *.IO.f = %*ENV<CRTB_CLASS_FILE>,     #= file containing students information; --class-file=classes/demo-class-small or 'export CRTB_CLASS_FILE=classes/demo-class-small'
          Str :pf(:$pictures-folder) where *.IO.d = %*ENV<CRTB_PICTURE_FOLDER>, #= folder picture files; --picture-folder=groups 'export CRTB_PICTURE_FOLDER=pictures'
          UInt :gs(:$group-size)     where * > 0  = %*ENV<CRTB_GROUP_SIZE>,     #= how many students to randomly pick?; --group-size=1 'export CRTB_GROUP_SIZE=1'
          ) {

    pick-group-from-class-file(:$class-file, :$pictures-folder, :$group-size);
}