#!/usr/bin/env raku
use v6.d;

use App::Classroom::Toolbox;

sub MAIN(IO(Str) :p(:$placement-file) where *.IO.f = %*ENV<CRTB_PLACEMENT_FILE>, #= file containing placement; --class-file=placements/demo-placement or 'export CRTB_PLACEMENT=placements/demo-placement'
         Bool :s(:$student-view)                                                 #= show how students vie it, otherwise teacher view is selected
         ) {
    my @placement = read-placement-file($placement-file);

    if $student-view {
        .say for create-student-view(@placement);
    } else {
        .say for create-teacher-view(@placement);
    }
}
